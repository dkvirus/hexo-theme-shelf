<style>
    .archive-title {
        font-family: Kai,Kaiti SC,KaiTi,BiauKai,\\6977\4F53,\\6977\4F53_GB2312,Songti SC,serif;
        word-break: break-word!important;
        font-size: 34px;
        font-weight: 700;
        line-height: 1.3;
        margin: 10px 0 20px;
        border-bottom: 1px solid #ddd;
    }

    .blog-item {
        display: block;
        width: 100%;
        height: 48px;   
        line-height: 48px;
        font-size: 14px;
        font-family: Georgia,Times New Roman,Times,Songti SC,serif;
        border-bottom: 1px dashed #ccc;
        padding-left: 20px;
        box-sizing: border-box;
        color: #666;
    }
    .blog-item:hover {
        color: #1094e8;
    }
</style>
    
<div class="container" style="padding: 0 8%;">
    <h1 class="archive-title">归档（<%= site.posts.length %>）</h1>
    <% var data = page.posts.data %>
    <% for (var i = 0; i < data.length; i++) { %>
        <a href="<%= url_for(data[i].path) %>" class="blog-item">
            <%= data[i].title %> &nbsp; (<%- full_date(data[i].date) %>)
        </a>
    <% } %>
    <%- partial('partial/page') %>
</div>